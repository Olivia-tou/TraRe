<div class="container-fluid">
  <div class="row-fluid">
    <div class="left-col col-md-7">
      <% if current_user.id != @user.id %>
      <% else %>
        <div class="left-title">
          <h1>Howdy, <%= current_user.username %> !</h1>
        </div>
      <% end %>

      <p>
        <h4><%= @user.username %>'s Resumes</h4>
        <% @resumes.each do |t| %>
          <li><%= link_to t.owner.username || 'nowhere man', user_path(username: t.owner.username) %></li>
        <% end %>
      </p>
      <p>
        <h4><%= @user.username %>'s Translations</h4>
        <% @theirtranslations.each do |t| %>
          <li><%= link_to t.owner.username || 'nowhere man', user_path(username: t.owner.username) %></li>
        <% end %>
      </p>
      <p>
        <h4><%= @user.username %>'s Translated Resumes</h4>
        <% @theirtranslateds.each do |t| %>
          <li><%= link_to t.translator.username || 'nowhere man', user_path(username: t.translator.username) %></li>
        <% end %>
      </p>
    </div>
    <div class="right-col col-md-4 col-md-offset-1">
      <div class="right-title">
        <h1>Information</h1>
      </div>
      <p>
        account： <%= @user.username %>
      </p>
      <p>
        E-mail： <%= @user.email %>
      </p>
      <p>
        Number of Resumes: <%= @resumes.length %>
      </p>
      <p>
        Number of Resume Translations: <%= @theirtranslations.length %>
      </p>
      <p>
        Number of Translated Resumes: <%= @theirtranslateds.length %>
      </p>
    </div>
  </div>
</div>
