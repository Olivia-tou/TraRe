<%= form_for @resume, :html => { :class => "form-horizontal resume" } do |f| %>

    <% if @resume.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@resume.errors.count, "error") %> prohibited this resume from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @resume.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :sentence, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sentence, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:sentence]) %>
  </div>
  <div class="control-group">
    <%= f.label :is_translation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :is_translation, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:is_translation]) %>
  </div>
  <div class="control-group">
    <%= f.label :owner_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :owner_id, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:owner_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :translator_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :translator_id, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:translator_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :language_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :language_id, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:language_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            resumes_path, :class => 'btn btn-default' %>

<% end %>
