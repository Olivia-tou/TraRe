<p id="notice"><%= notice %></p>

<h1>Original Resume</h1>

<table>
  <thead>
    <tr>
      <th>Sentence</th>
      <th>Is translation</th>
      <th>Owner</th>
      <th>Translator</th>
      <th>Language</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
  <% resume = @original_resumes.first %>
  <% if resume.present? %>
      <tr>
        <td><%= resume.sentence %></td>
        <td><%= resume.is_translation %></td>
        <td><%= resume.owner.username %></td>
        <td><%= resume.translator.username %></td>
        <td><%= resume.written_language.code %></td>
        <% if current_user.id == resume.owner_id %>
          <td><%= link_to 'Edit', edit_user_resume_path(id: resume.id) %></td>
          <td><%= link_to 'Destroy', user_resume_path(id: resume.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>

    <% elsif current_user.username == params[:user_username] %>
      <%= link_to 'New Resume', new_user_resume_path %>
    <% end %>
  </tbody>
</table>

<h1>Listing Translations</h1>

<table>
  <thead>
    <tr>
      <th>Sentence</th>
      <th>Is translation</th>
      <th>Owner</th>
      <th>Translator</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @translated_resumes.each do |resume| %>
      <tr>
        <td><%= resume.sentence %></td>
        <td><%= resume.is_translation %></td>
        <td><%= resume.owner.username %></td>
        <td><%= resume.translator.username %></td>
        <td><%= resume.written_language.code %></td>
        <% if current_user.id == resume.translator_id or current_user.id == resume.owner_id %>
          <td><%= link_to 'Edit', edit_user_resume_path(id: resume.id) %></td>
          <td><%= link_to 'Destroy', user_resume_path(id: resume.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Link to create translation resumes in Other User's Resume -->
<%# if current_user.username != params[:user_username] && resume.present? %>
<% unless current_user.username == params[:user_username] || resume.blank? %>
  <%= link_to 'new Translation Resume', new_user_resume_path %>
<% end %>
